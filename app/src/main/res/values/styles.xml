<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="sign_up">

        <item name="android:textSize">
            25sp
        </item>

        <item name="android:textColor">
            #5061FF
        </item>

    </style>

    <style name="editText">
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_16sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
    </style>

    <style name="label">
       <item name="android:textColor">@color/mainColor</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:layout_marginStart">@dimen/_14sdp</item>
        <item name="android:layout_marginTop">@dimen/_17sdp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="lineHeight">@dimen/_19sdp</item>
    </style>

    <style name="editLabel">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/_16sdp</item>
        <item name="android:paddingEnd">@dimen/_16sdp</item>
        <item name="drawableEndCompat">@drawable/pencil_icon</item>
        <item name="android:layout_marginStart">@dimen/_14sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
    </style>

    <style name="btn_style">
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_35sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">@dimen/_10sdp</item>
        <item name="android:minWidth">@dimen/_10sdp</item>
    </style>
</resources>